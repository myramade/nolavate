# Database Configuration
DATABASE_URL=mongodb+srv://username:password@host/database?authSource=admin&tls=true

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d
SESSION_TOKEN_SECRET=your-session-secret-here
REFRESH_TOKEN_SECRET=your-refresh-secret-here

# Google reCAPTCHA v2 (Required for production signup)
# Get your keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here

# OAuth (Optional - not currently used in frontend)
# GOOGLE_CLIENT_ID=your-google-client-id
# APPLE_CLIENT_ID=your-apple-client-id

# API Configuration
API_URL=http://localhost:5000
